# 企业知识聚合平台环境配置
# 复制此文件为.env并根据实际情况修改配置

# ===== 数据库配置 =====
DB_HOST=localhost
DB_PORT=3306
DB_NAME=enterprise_knowledge_admin
DB_USERNAME=root
DB_PASSWORD=enterprise@2024

# ===== Redis配置 =====
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ===== AI服务配置 =====
AI_MASTER_KEY=your-secure-master-key-change-this-in-production
AI_DAILY_COST_LIMIT=50000
AI_MONTHLY_COST_LIMIT=1500000

# ===== JWT配置 =====
JWT_SECRET=your-jwt-secret-key-change-this-in-production
JWT_EXPIRATION=86400

# ===== 应用配置 =====
SPRING_PROFILES_ACTIVE=dev
SERVER_PORT=8080

# ===== 前端端口配置 =====
# 用户端系统（企业门户）端口
USER_PORTAL_PORT=3000
FRONTEND_PORT=3000

# 管理后台系统端口  
ADMIN_PORTAL_PORT=3100

# Mock API 服务器端口
MOCK_SERVER_PORT=3001

# API 服务端口
API_SERVER_PORT=3007

# ===== 文件上传配置 =====
UPLOAD_PATH=/data/uploads/
MAX_FILE_SIZE=10MB
MAX_REQUEST_SIZE=50MB

# ===== 监控配置 =====
MANAGEMENT_ENDPOINTS_ENABLED=true
ACTUATOR_SECURITY_ENABLED=false

# ===== 日志配置 =====
LOG_LEVEL=INFO
LOG_PATH=/var/log/enterprise-app
# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.{js,ts,vue}]
indent_size = 2

[*.json]
indent_size = 2

[*.yml,*.yaml]
indent_size = 2

[Makefile]
indent_style = tab
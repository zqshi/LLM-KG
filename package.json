{
  "name": "llm-kg",
  "private": true,
  "version": "0.0.0",
  "packageManager": "pnpm@9.12.0",
  "scripts": {
    "prepare": "husky",
    "lint": "eslint . --ext .ts,.tsx,.js,.vue --max-warnings=0",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.vue --fix",
    "format": "prettier . --write",
    "stylelint": "stylelint '**/*.{css,scss,vue}'",
    "typecheck": "pnpm -r run typecheck || true",
    "test": "pnpm -r run test || true",
    "test:ci": "pnpm -r run test:ci || pnpm -r run test || true",
    "build": "pnpm -r run build",
    "dev": "pnpm -r --parallel run dev"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.14.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-vue": "^9.26.0",
    "husky": "^9.1.3",
    "lint-staged": "^15.2.9",
    "postcss-html": "^1.7.0",
    "prettier": "^3.3.3",
    "stylelint": "^16.8.1",
    "stylelint-config-prettier": "^10.0.4",
    "stylelint-config-standard": "^36.0.1"
  }
}
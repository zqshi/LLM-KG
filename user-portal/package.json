{
  "name": "user-portal",
  "version": "1.0.0",
  "description": "企业内部门户系统 (员工端)",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build && npm run typecheck",
    "preview": "vite preview",
    "mock": "node mock-server.cjs",
    "dev:full": "concurrently \"npm run mock\" \"npm run dev\"",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "typecheck": "vue-tsc --noEmit",
    "clean": "rm -rf dist node_modules/.vite node_modules/.cache",
    "pre-commit": "npm run format && npm run lint && npm run typecheck && npm run test:run",
    "ci": "npm ci && npm run pre-commit && npm run build"
  },
  "dependencies": {
    "@arco-design/web-vue": "^2.57.0"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "concurrently": "^9.2.1",
    "cors": "^2.8.5",
    "eslint": "^9.34.0",
    "eslint-plugin-vue": "^10.4.0",
    "express": "^4.21.2",
    "globals": "^16.3.0",
    "happy-dom": "^18.0.1",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "sass-embedded": "^1.91.0",
    "terser": "^5.43.1",
    "typescript": "^5.3.3",
    "unplugin-auto-import": "^0.17.2",
    "unplugin-vue-components": "^0.26.0",
    "vite": "^7.1.3",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.0.6"
  }
}
